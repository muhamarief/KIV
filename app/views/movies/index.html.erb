<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <% if params[:action] == "index" %>
      <h1 class="text-center">
        All Movies
      </h1>
    <% elsif params[:action] == "showing_now" %>
      <h1 class="text-left">
        Showing Now
      </h1>
    <% else %>
      <h1 class="text-center">
        Coming Soon
      </h1>
    <% end %>
  </div>
</div>

<div class="container text-left">

<!-- dropdown menu -->
<hr style="margin:10px 10px 10px 10px">
  <div class="dropdown">
    <button class="btn btn-primary dropdown-toggle dropbtn" type="button" data-toggle="dropdown">Sort By
    <span class="caret"></span></button>
    <ul class="dropdown-menu">
      <li><a href="#">Movie Name</a></li>
      <li><a href="#">Popular</a></li>
      <li><a href="#">Latest Release</a></li>
    </ul>
  </div>

<hr style="visibility:hidden">

<!-- movies -->
<div class="container">
  <% @movies.each_with_index do |movie, index| %>
    <a href="/movies/<%= movie.id %>">
      <div class="col-sm-4">
        <img src="https://placehold.it/150x80?text=IMAGE" class="img-responsive" style="width:100%" alt="Image">
        <p><%=movie.title%></p>
      </div>
    </a>
  <%end%>
</div>

  <%= link_to 'New Movie', new_admin_movie_path %>
