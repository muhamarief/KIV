<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <h1 class="text-center">
      All Movies
    </h1>


<div class="media">
  <div class="media-body">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Movie Title</th>
          <th>Synopsis</th>
          <th>Genre</th>
          <th>Trailer</th>
          <th>Cast</th>
          <th>Rating</th>
          <th>Duration</th>
        </tr>
      </thead>

     <tbody>
        <% @movies.each do |movie| %>
          <tr>
            <!-- image_tag avatar.image.url              -->
            <td><%= movie.title %></td>
            <td><%= movie.description %></td>
            <td><%= movie.genre %></td>
            <td><%= movie.trailer_url %></td>
            <td><%= movie.cast %></td>
            <td><%= movie.rating %></td>
            <td><%= movie.duration %> min</td>

            <td><%= link_to 'Show', "/movies/#{movie.id}", class: 'btn btn-mini' %></td>
            <td><%= link_to 'Edit', edit_admin_movie_path(movie), class: 'btn btn-mini btn-success' %></td>
            <td><%= link_to 'Destroy', edit_admin_movie_path(movie), method: :delete, class: 'btn btn-mini btn-danger', data: { confirm: 'Are you sure?' } %></td>

          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<br>



<%= link_to 'New Movie', new_admin_movie_path %>
