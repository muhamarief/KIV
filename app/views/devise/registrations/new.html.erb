
<div align="center">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
</div>

<div class="login-block">
    <h1>Sign Up</h1>
      <%= f.text_field :username, placeholder: "Username", id:"username"%>
      <%= f.email_field :email, autofocus: true, placeholder:"Email", id:"username" %>

      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length%> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off", placeholder:"Password", id:"password" %>
      <%= f.password_field :password_confirmation, autocomplete: "off", placeholder:"Password Confirmation", id:"password" %>
      
      <%= f.submit "Sign up         ", id:"button" %>
</div>

<% end %>




